---
// Layouts
import Layout from '../layouts/Layout.astro';
import Main from '../layouts/Main.astro';
//Components
import Navbar from '../components/Navbar.astro';
import ContactButton from "../components/Contact_Button.astro"
---

<Layout title="Wesley Wilson - Portfolio">
<div class='flex h-screen'>
	<Navbar/>
	<div class="flex items-center h-screen w-full">
        <div class="flex flex-col align-center self-center justify-center w-full">
            <h1 class="self-center text-8xl font-bold mb-4 p-2 md-color">Oops!</h1>
            <h2 class="self-center text-4xl font-semibold  p-2 md-color">404 - Page Not Found</h2>
            <div class="self-center mt-2 text-center md-color">
                <p class="self-center ">The page your are looking for might have been removed</p>
                <p class="self-center">had its name changed or is temporarily unavailable.</p>
            </div>
            <div class="self-center mt-6">
                <a href="/" class="button_homepage">Go To Homepage</a>
            </div>
            
        </div>
    </div>
</div>
</Layout>

<style>
	.lg-color{
		color:var(--lighter-color)
	}
	.lg-color:hover{
		animation: letter_animation 2s ease-in;
		animation-iteration-count: infinite;
	}
	.md-color{
		color:var(--mid-color);
	}
	.dk-color{
		color: var(--darker-color);
	}

    .button_homepage{
        font-size: 1.4rem;
        font-weight: bold;
        border:1px solid var(--mid-color);
        padding: 2px 10px;
        border-radius:10px;
        color:var(--mid-color);
    }
    .button_homepage:hover{
        border: 1px solid var(--lighter-color);
        color: var(--lighter-color);
    }
	@keyframes letter_animation {
  		0% {
    		transform: rotateY(0deg);
  		}
		50%{
			transform:rotateZ(-30deg);
		}
  		75%{
    		transform: rotateZ(30deg);
  		}
		100%{
			transform:rotateZ(0deg);
		}
		
	}

	.bg-container{
		width:900px;
	}
	@media(max-width:1200px){
		.bg-container{
			width:600px;
		}
	}

</style>