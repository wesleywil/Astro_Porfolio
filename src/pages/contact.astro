---
// Layouts
import Layout from "../layouts/Layout.astro";
import Main from "../layouts/Main.astro";
//Components
import Navbar from "../components/Navbar.astro";
import { t, changeLanguage } from "i18next";

changeLanguage("en");
---

<Layout>
  <div class="h-full md:h-screen">
    <Navbar />
    <Main myClass="flex items-center w-full p-2">
      <div
        class="md:mt-24 flex flex-col md:flex-row gap-4 items-center xl:justify-between md:justify-center"
      >
        <div
          class="xl:ml-24 w-full md:w-1/2 xl:w-2/5 text-xl xl:text-2xl md:text-2xl self-center lg-color font-semibold"
        >
          <h1 class="text-4xl xl:text-6xl md:text-6xl">
            <span class="m-0 md-color text-5xl xl:text-7xl md:text-7xl"
              >{t("contact.first_letter_one")}</span
            >{t("contact.title_one")}
            <span class="m-0 md-color text-5xl xl:text-7xl md:text-7xl"
              >{t("contact.first_letter_two")}</span
            >{t("contact.title_two")}
          </h1>
          <p class="mt-2 xl:text-justify md:text-justify">
            {t("contact.text")}
          </p>
          <div class="flex flex-col mx-auto gap-2 p-2 m-2">
            <div
              class="flex flex-col xl:flex-row md:flex-row items-center gap-4"
            >
              <a href="tel:+5511951971816">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="75"
                  height="75"
                  viewBox="0 0 24 24"
                >
                  <path
                    fill="#f79428"
                    d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"
                  ></path>
                </svg>
              </a>
              <span class="text-sm xl:text-xl md:text-xl"
                >+55 (11) 95197-1816</span
              >
            </div>
            <div
              class="flex flex-col xl:flex-row md:flex-row items-center gap-4"
            >
              <a href="mailto: wesleywilsonti@gmail.com">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="75"
                  height="75"
                  viewBox="0 0 24 24"
                >
                  <path
                    fill="#f79428"
                    d="M0 3v18h24v-18h-24zm21.518 2l-9.518 7.713-9.518-7.713h19.036zm-19.518 14v-11.817l10 8.104 10-8.104v11.817h-20z"
                  ></path>
                </svg>
              </a>
              <span class="text-sm xl:text-xl md:text-xl"
                >wesleywilsonti@gmail.com</span
              >
            </div>
          </div>
        </div>
        <div class="flex self-center w-1/2 xl:w-1/3 pt-2 xl:mr-24">
          <img src="/contact_me.svg" alt="Mobile phone Image" />
        </div>
      </div>
    </Main>
  </div>
</Layout>

<style>
  .lg-color {
    color: var(--lighter-color);
  }
  .md-color {
    color: var(--mid-color);
  }
  .dk-color {
    color: var(--darker-color);
  }

  .md-border:hover {
    border: 1px solid var(--mid-color);
    color: var(--mid-color);
  }

  .bglg-color {
    background-color: var(--lighter-color);
  }
  .bgmd-color {
    background-color: var(--mid-color);
  }
  .bgdk-color {
    background-color: var(--darker-color);
  }
</style>
