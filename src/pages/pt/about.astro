---
// Layouts
import Layout from "../../layouts/Layout.astro";
import Main from "../../layouts/Main.astro";
//Components
import Navbar from "../../components/Navbar.astro";
import ContactButton from "../../components/Contact_Button.astro";
import { t, changeLanguage } from "i18next";

changeLanguage("pt");
---

<Layout>
<div class='h-full md:h-screen '>
	<Navbar/>
	<Main myClass="flex flex-col xl:flex-row md:flex-row  items-center w-full p-2">
		<div class="xl:mt-24 flex flex-col xl:flex-row gap-4 xl:justify-between md:justify-center">
			<div class="xl:w-2/5 md:w-full text-base xl:text-2xl md:text-2xl self-center lg-color font-semibold">
                <h1 class="mb-2 xl:m-2 md:m-2 p-2 text-4xl xl:text-6xl md:text-6xl"><span class="m-0 md-color text-5xl xl:text-7xl md:text-7xl">{t("about.first_letter_one")}</span>{t("about.title_one")} <span class="m-0 md-color text-5xl xl:text-7xl md:text-7xl">{t("about.first_letter_two")}</span>{t("about.title_two")}</h1>
				<p class="xl:m-2 md:m-2 mb-2 xl:p-2 md:p-2 text-left xl:text-justify">{t("about.one")}</p>
                <p class="xl:mx-2 md:mx-2 xl:px-2 md:px-2 text-left xl:text-justify">{t("about.two")}</p>
                <p class="xl:m-2 md:m-2 mt-2 xl:p-2 md:p-2 text-left xl:text-justify">
					{t("about.three")}
                </p>
				<div class="xl:my-4 xl:p-4 md:my-4 md:p-4">
					<ContactButton/>
				</div>
				
			</div>
            <div class="flex flex-col  xl:mr-12 md:w-1/2 md:self-center">
                <img src="/programming.svg" alt="Programming Image">
            </div>
		</div>
	</Main>
</div>
</Layout>

<style>
	.lg-color{
		color:var(--lighter-color)
	}
	.md-color{
		color:var(--mid-color);
	}
	.dk-color{
		color: var(--darker-color);
	}

	.md-border:hover{
		border:1px solid var(--mid-color);
		color:var(--mid-color)
	}

    .bglg-color{
		background-color:var(--lighter-color)
	}
	.bgmd-color{
		background-color:var(--mid-color);
	}
	.bgdk-color{
		background-color: var(--darker-color);
	}

</style>