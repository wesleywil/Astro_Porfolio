---
// Layouts
import Layout from "../../layouts/Layout.astro";
import Main from "../../layouts/Main.astro";
//Components
import Navbar from "../../components/Navbar.astro";
import ContactButton from "../../components/Contact_Button.astro";
import { t, changeLanguage } from "i18next";
import { LanguageSelector } from "astro-i18next/components";

changeLanguage("pt");
---

<Layout>
<div class='flex h-screen'>
	<Navbar/>
	
	<Main myClass="flex mt-12 xl:mt-0 md:mt-0 xl:items-center md:items-center xl:flex-row md:flex-col w-full xl:pl-36 md:pl-0">
			
		<div class="flex gap-2 xl:mt-0 md:mt-20">
			
			<div class="md-color font-bold">
				<h1 class="text-3xl sm:text-8xl ml-4">{t("home.presentation")}</h1>
				<h1 class="ml-4 text-2xl sm:text-6xl">{t("home.sub")} 
					<span class="inline-block m-0 lg-color test text-3xl sm:text-7xl">W</span>esley 
					</h1>
				<h2 class="m-0 ml-4 text-2xl sm:text-6xl">{t("home.third")}</h2>
				<h3 class="text-lg	sm:text-xl pl-1 m-0 ml-4 font-semibold">ReactJs + Django</h3>
				<div class="mt-12 ml-2 pl-2 xl:ml-0 xl:pl-0 md:pl-0 md:ml-0">
					<span class="ml-0 xl:ml-4 md:ml-4">{t("home.language")}</span>
					<LanguageSelector showFlag={true} class="my-select-class ml-0 xl:ml-2 md:ml-2 rounded" />
				</div>
				
				<div class="ml-2 pl-2 xl:ml-0 xl:pl-0 md:pl-0 md:ml-0">
					<ContactButton/>
				</div>
				
			</div>
		</div>
		<div class="bg-container hidden sm:block">
			<img src="/web-development.svg" alt="Web Development Image">
		</div>
	</Main>
</div>
</Layout>

<style>
	.lg-color{
		color:var(--lighter-color)
	}
	.lg-color:hover{
		animation: letter_animation 2s ease-in;
		animation-iteration-count: infinite;
	}
	.md-color{
		color:var(--mid-color);
	}
	.dk-color{
		color: var(--darker-color);
	}
	@keyframes letter_animation {
  		0% {
    		transform: rotateY(0deg);
  		}
		50%{
			transform:rotateZ(-30deg);
		}
  		75%{
    		transform: rotateZ(30deg);
  		}
		100%{
			transform:rotateZ(0deg);
		}
		
	}

	.bg-container{
		width:900px;
	}
	@media(max-width:1200px){
		.bg-container{
			width:600px;
		}
	}

</style>