---
// Layouts
import Layout from "../../../layouts/Layout.astro";
//Components
import Navbar from "../../../components/Navbar.astro";
import { t, changeLanguage } from "i18next";

changeLanguage("pt");
---

<Layout>
<div class='flex h-full xl:h-screen md:h-full'>
	<Navbar/>
    <div class="flex justify-center xl:items-center mx-auto w-full xl:gap-24 md:gap-4">
		<div class="flex flex-col gap-2 float-left">
			<div class="md-color font-bold">
				<h1 class="text-3xl xl:text-8xl md:text-5xl  text-center">{t("project_page.title")}</h1>
			</div>
            <div class="flex flex-col items-center">
                <h1 class="text-white text-xl xl:text-4xl md:text-2xl">BUG Tracker</h1>
                <h2>ReactJs + Tauri</h2>
                <p class="w-full xl:w-1/3 md:w-1/2 m-2 p-2 lg-color ">{t("card_project.descriptions.bug_tracker")}</p>
                <div class="m-2">
                    <a class="lg-color hover:text-gray-200 inline-flex items-center tooltip tooltip-right" href="https://github.com/wesleywil/bug-tracker" data-tip="Visit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" viewBox="0 0 24 24">
                            <path fill="#f79428" d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                        </svg>
                      </a> 
                </div>
                <div class=" flex flex-wrap gap-1 justify-center mt-2">
                    <img src="https://i.imgur.com/qkiMNCa.jpg" alt="" class="img_project">
                    <img src="https://i.imgur.com/lKjkXtt.png" alt="" class="img_project">
                    <img src="https://i.imgur.com/bUqL4Z1.gif" alt="" class="img_project">
                    <img src="https://i.imgur.com/yY89R19.gif" alt="" class="img_project">
                </div>
            </div>
		</div>
        
    </div>
</div>
</Layout>

<style>

    .img_project{
        width:400px;
        height: 300px;
    }
	

	.lg-color{
		color:var(--lighter-color)
	}
	.md-color{
		color:var(--mid-color);
	}
	.dk-color{
		color: var(--darker-color);
	}

	.md-border:hover{
		border:1px solid var(--mid-color);
		color:var(--mid-color)
	}

</style>