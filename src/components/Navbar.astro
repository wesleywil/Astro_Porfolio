---
import NavbarLink from "./Navbar_link.astro";

import { t } from "i18next";
import { localizePath } from "astro-i18next";


---
<span class="h-fit" style="font-size:30px;cursor:pointer" id="openNav">
    <img src="/hamburger.svg" alt="Hamburger Menu Icon" class="p-2 h-12">
</span>
<div id="mySidenav" class="sidenav">
    
    <a href="javascript:void(0)" class="closebtn" id="closeNav">&times;</a>
   
        <a href={localizePath("/")} class="mt-4 m-2">
            <div class="flex flex-col items-center mr-4">
                <img src="/lighter_logo.svg" alt="Wesley's Logo" class="w-12">
                <span class="text-[#fffdfc] font-bold text-xl">Wesley Wilson</span>
            </div>
        </a>
    
    <ul class="text-3xl flex flex-col items-center">
        <NavbarLink link_text={t("navbar.links.projects")} link={localizePath("/projects")}/>
        <NavbarLink link_text={t("navbar.links.skills")} link={localizePath("/skills")}/>
        <NavbarLink link_text={t("navbar.links.about")} link={localizePath("/about")}/>
        <NavbarLink link_text={t("navbar.links.contact")} link={localizePath("/contact")}/>
    </ul>

    <div class="flex flex-col items-center mr-4">
        <a class="tooltip tooltip-top"  data-tip="GitHub Page" href="https://github.com/wesleywil/"><svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" viewBox="0 0 24 24">
            <path fill="#512611" d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg></a>
        <div class="mt-24">
            <h3 class="ml-4 simple_beautiful hidden xl:block md:block">{t("navbar.message")}</h3>
        </div>
        
    </div>
    
  </div>
  <script>
    document.getElementById("openNav").addEventListener("click", ()=>{
        document.getElementById("mySidenav").style.width = "250px";
    });
    document.getElementById("closeNav").addEventListener("click", ()=>{
        document.getElementById("mySidenav").style.width = "0";
    });
</script>

<style>
    .narbar_bg{
        background-color: var(--mid-color);
    }
    
    .navbar_text{
        color:var(--darker-color);
    }
    .navbar_text:hover{
        color:var(--lighter-color);
    }

    .simple_beautiful{
        font-weight: 600;
        color: var(--darker-color);
        
    }
    .simple_beautiful:hover{
        font-weight: bold;
        color:var(--lighter-color);
        animation: shrinkjump 2s ease-in;
    }

    @keyframes shrinkjump {
  0% {
    transform: rotateX(0deg) scaleX(1.1);
  }
  50%{
    transform: rotateX(360deg) scaleX(.8);
  }
  100% {
    transform: rotateX(0deg);
  }
}
.sidenav {
  height: 100%;
  width: 0;
  position: fixed;
  z-index: 100;
  top: 0;
  left: 0;
  background-color: var(--mid-color);
  overflow-x: hidden;
  transition: 0.5s;
  padding-top: 60px;
}

.sidenav a {
  padding: 8px 8px 8px 32px;
  text-decoration: none;
  font-size: 25px;
  color: var(--lighter-color);
  display: block;
  transition: 0.3s;
}

.sidenav a:hover {
  color: #f1f1f1;
}

.sidenav .closebtn {
  position: absolute;
  top: 0;
  right: 25px;
  font-size: 36px;
  margin-left: 50px;
}

@media screen and (max-height: 450px) {
  .sidenav {padding-top: 15px;}
  .sidenav a {font-size: 18px;}
}
</style>




