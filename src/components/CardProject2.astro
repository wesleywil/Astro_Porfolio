---
export interface Props{
  title:string;
  description:string;
  img:string;
  link:string;
  categories:string[];
}
const {title, description, img, link, categories} = Astro.props;

---

<div class="md:flex xl:flex relative w-full md:w-fit xl:w-fit  flex-none snap-center">
  <div class="overflow-hidden">
    <img alt="gallery" class="pl-2 img_change absolute inset-0 object-cover object-center" src={img}>
  </div>
    <div class="m_details px-8 py-10 relative z-10  bg-color  opacity-100 md:opacity-0 xl:opacity-0 hover:opacity-100">
        <h2 class="tracking-widest text-sm title-font font-medium lg-color mb-1">{categories}</h2>
        <h1 class="title-font text-lg font-medium mb-3 md-color">{title}</h1>
        <p class="leading-relaxed lg-color p-2">{description}</p>
        <a href={link} class="tooltip tooltip-bottom flex justify-center" data-tip="Github">
          <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" viewBox="0 0 24 24" class="mx-auto">
            <path fill="#f79428" d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
    </div>
</div>

<style>
  .bg-color{
    background-color: var(--darker-color);
    border:1px solid var(--lighter-color);
  }
  .lg-color{
    color:var(--lighter-color);
  }
  .md-color{
    color:var(--mid-color);
  }
   .img_change{
        border-radius:10px;
        width:500px;
        height:350px;
        transition: 300ms ease-in;
        
    }
    .img_change:hover{
      transform: scale(1.1);
    }

    .m_details{
      width:500px;
      margin-top: 150px;
      border-radius:10px;
    }
    @media(max-width: 420px) {
        .img_change{
            width: calc(100% - 10px);
            height:fit-content
        }
        .m_details{
          width: fit-content;
        }
    }
    

</style>