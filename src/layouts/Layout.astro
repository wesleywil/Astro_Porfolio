---
export interface Props {
	title: string;
}

const { title } = Astro.props;

import ButtonTop from '../components/Button_top.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/lighter_logo.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<ButtonTop/>
	</body>
</html>

<style>
	:root{
		--darker-color:#512611;
		--mid-color:#f79428;
		--lighter-color:#fffdfc;
	}

	body{
		background-color: var(--darker-color);
	}
</style>
